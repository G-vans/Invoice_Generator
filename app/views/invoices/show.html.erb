<div class="min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Invoice <%= @invoice.invoice_number %></h1>
        <p class="mt-2 text-sm text-gray-600">Created on <%= @invoice.created_at.strftime("%B %d, %Y") %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_invoice_path(@invoice), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to "Download PDF", invoice_path(@invoice, format: :pdf), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700", target: "_blank" %>
      </div>
    </div>

    <!-- Invoice Display -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <!-- Company Header -->
      <div class="px-6 py-5 bg-gray-50 border-b border-gray-200">
        <div class="flex justify-between items-start">
          <div>
            <% setting = Setting.instance %>
            <% if setting.logo.attached? %>
              <%= image_tag setting.logo, class: "h-16 w-auto mb-4" %>
            <% end %>
            <h2 class="text-xl font-bold text-gray-900"><%= setting.company_name %></h2>
            <% if setting.company_address.present? %>
              <p class="text-sm text-gray-600 mt-1"><%= simple_format(setting.company_address) %></p>
            <% end %>
            <% if setting.company_phone.present? || setting.company_email.present? %>
              <div class="mt-2 text-sm text-gray-600">
                <% if setting.company_phone.present? %><%= setting.company_phone %><% end %>
                <% if setting.company_phone.present? && setting.company_email.present? %> | <% end %>
                <% if setting.company_email.present? %><%= setting.company_email %><% end %>
              </div>
            <% end %>
          </div>
          <div class="text-right">
            <h3 class="text-2xl font-bold text-gray-900">INVOICE</h3>
            <p class="mt-2 text-sm text-gray-600">Invoice #: <span class="font-medium"><%= @invoice.invoice_number %></span></p>
            <p class="text-sm text-gray-600">Date: <span class="font-medium"><%= @invoice.invoice_date.strftime("%B %d, %Y") %></span></p>
            <p class="text-sm text-gray-600">Due: <span class="font-medium"><%= @invoice.due_date.strftime("%B %d, %Y") %></span></p>
          </div>
        </div>
      </div>

      <!-- Client Information -->
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Bill To:</h3>
        <p class="text-sm font-medium text-gray-900"><%= @invoice.client_name %></p>
        <% if @invoice.client_address.present? %>
          <p class="text-sm text-gray-600 mt-1"><%= simple_format(@invoice.client_address) %></p>
        <% end %>
        <% if @invoice.client_email.present? %>
          <p class="text-sm text-gray-600 mt-1"><%= @invoice.client_email %></p>
        <% end %>
      </div>

      <!-- Line Items -->
      <div class="px-6 py-5">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
              <th class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
              <th class="px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @invoice.invoice_items.order(:position).each do |item| %>
              <tr>
                <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-900"><%= item.description %></td>
                <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-900 text-right"><%= item.quantity %></td>
                <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-900 text-right"><%= number_to_currency(item.unit_price, unit: Setting.instance.currency) %></td>
                <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900 text-right"><%= number_to_currency(item.line_total, unit: Setting.instance.currency) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Totals -->
      <div class="px-6 py-5 bg-gray-50 border-t border-gray-200">
        <div class="flex justify-end">
          <div class="w-64">
            <div class="flex justify-between py-2">
              <span class="text-sm text-gray-600">Subtotal:</span>
              <span class="text-sm font-medium text-gray-900"><%= number_to_currency(@invoice.subtotal, unit: Setting.instance.currency) %></span>
            </div>
            <% if @invoice.tax_rate > 0 %>
              <div class="flex justify-between py-2">
                <span class="text-sm text-gray-600">Tax (<%= @invoice.tax_rate %>%):</span>
                <span class="text-sm font-medium text-gray-900"><%= number_to_currency(@invoice.tax_amount, unit: Setting.instance.currency) %></span>
              </div>
            <% end %>
            <div class="flex justify-between py-2 border-t border-gray-200 mt-2 pt-2">
              <span class="text-base font-bold text-gray-900">Total:</span>
              <span class="text-base font-bold text-gray-900"><%= number_to_currency(@invoice.total, unit: Setting.instance.currency) %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Notes -->
      <% if @invoice.notes.present? %>
        <div class="px-6 py-5 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Notes:</h3>
          <p class="text-sm text-gray-600"><%= simple_format(@invoice.notes) %></p>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="mt-6 flex justify-end space-x-3">
      <%= link_to "Back to Invoices", invoices_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "Duplicate", duplicate_invoice_path(@invoice), data: { turbo_method: :post }, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>
</div>



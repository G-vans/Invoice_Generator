<div class="min-h-screen py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Invoices</h1>
        <p class="mt-2 text-sm text-gray-600">Manage all your invoices</p>
      </div>
      <%= link_to "New Invoice", new_invoice_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>

    <!-- Search and Filter -->
    <div class="mb-6 bg-white p-4 rounded-lg shadow">
      <%= form_with url: invoices_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |form| %>
        <div class="flex-1 min-w-[200px]">
          <%= form.text_field :client, placeholder: "Search by client name...", value: params[:client], class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>
        <div class="flex gap-2">
          <%= form.submit "Search", class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to "Clear", invoices_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      <% end %>
    </div>

    <!-- Invoices Table -->
    <% if @invoices.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @invoices.each do |invoice| %>
            <li>
              <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div>
                      <p class="text-sm font-medium text-blue-600">
                        <%= link_to invoice.invoice_number, invoice, class: "hover:underline" %>
                      </p>
                      <p class="text-sm text-gray-900"><%= invoice.client_name %></p>
                    </div>
                  </div>
                  <div class="flex items-center space-x-4">
                    <div class="text-right">
                      <p class="text-sm font-medium text-gray-900"><%= number_to_currency(invoice.total, unit: invoice.tax_rate > 0 ? Setting.instance.currency : "$") %></p>
                      <p class="text-sm text-gray-500"><%= invoice.invoice_date.strftime("%b %d, %Y") %></p>
                    </div>
                    <div class="flex space-x-2">
                      <%= link_to "View", invoice, class: "text-sm text-blue-600 hover:text-blue-800" %>
                      <%= link_to "Edit", edit_invoice_path(invoice), class: "text-sm text-gray-600 hover:text-gray-800" %>
                      <%= link_to "PDF", invoice_path(invoice, format: :pdf), class: "text-sm text-green-600 hover:text-green-800", target: "_blank" %>
                      <%= link_to "Duplicate", duplicate_invoice_path(invoice), data: { turbo_method: :post }, class: "text-sm text-purple-600 hover:text-purple-800" %>
                      <%= link_to "Delete", invoice_path(invoice), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-sm text-red-600 hover:text-red-800" %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-gray-500 text-lg">No invoices found.</p>
        <p class="text-gray-400 text-sm mt-2">Get started by creating your first invoice.</p>
        <%= link_to "Create Your First Invoice", new_invoice_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>


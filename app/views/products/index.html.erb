<div class="min-h-screen py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Product Catalog</h1>
        <p class="mt-2 text-sm text-gray-600">Manage your catalog of items for quick invoice creation</p>
      </div>
      <%= link_to "Add New Product", new_product_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-semibold text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
    </div>

    <!-- Search and Filter -->
    <div class="mb-6 bg-white p-4 rounded-lg border border-gray-200">
      <%= form_with url: products_path, method: :get, local: true, class: "flex flex-wrap gap-4" do |form| %>
        <div class="flex-1 min-w-[200px]">
          <%= form.text_field :search, placeholder: "Search products...", value: params[:search], class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
        </div>
        <div class="min-w-[150px]">
          <%= form.select :category, options_for_select([["All Categories", ""]] + @categories.map { |c| [c, c] }, params[:category]), {}, { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" } %>
        </div>
        <div class="flex gap-2">
          <%= form.submit "Search", class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" %>
          <%= link_to "Clear", products_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Products Grid -->
    <% if @products.any? %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% @products.each do |product| %>
          <div class="bg-white rounded-lg border border-gray-200 p-6 hover:border-gray-300 transition-colors">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
              <% if product.category.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                  <%= product.category %>
                </span>
              <% end %>
            </div>
            <% if product.description.present? %>
              <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= product.description %></p>
            <% end %>
            <div class="flex justify-end space-x-3 mt-4">
              <%= link_to "Edit", edit_product_path(product), class: "text-sm font-medium text-gray-900 hover:text-gray-700" %>
              <%= link_to "Delete", product_path(product), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                  class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg border border-gray-200 p-12 text-center">
        <p class="text-gray-600 text-lg">No products found.</p>
        <p class="text-gray-500 text-sm mt-2">
          <%= params[:search].present? ? "Try a different search term." : "Get started by adding your first product." %>
        </p>
        <% unless params[:search].present? %>
          <%= link_to "Add Your First Product", new_product_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-semibold text-white bg-gray-900 hover:bg-gray-800 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


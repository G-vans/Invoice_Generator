<div class="min-h-screen py-8">
  <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-gray-900">Log in</h1>
      <p class="mt-2 text-sm text-gray-600">Sign in to your account</p>
    </div>

    <!-- Form -->
    <div class="bg-white border border-gray-200 rounded-lg">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "px-6 py-5") do |f| %>
        <div class="space-y-6">
          <!-- Email -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-gray-900 focus:ring-gray-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
            </div>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <%= f.submit "Log in", class: "w-full px-4 py-2 border border-transparent rounded-lg text-sm font-semibold text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

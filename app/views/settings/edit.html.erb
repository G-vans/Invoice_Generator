<div class="min-h-screen py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Invoice Settings</h1>
      <p class="mt-2 text-sm text-gray-600">Configure your company information and invoice defaults</p>
    </div>

    <!-- Settings Form -->
    <%= form_with model: @setting, url: settings_path, method: :patch, local: true, class: "bg-white border border-gray-200 rounded-lg" do |form| %>
      <% if @setting.errors.any? %>
        <div class="px-6 py-4 bg-gray-50 border-l-4 border-gray-400">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-gray-800">
                <%= pluralize(@setting.errors.count, "error") %> prohibited these settings from being saved:
              </h3>
              <ul class="mt-2 text-sm text-gray-700 list-disc list-inside">
                <% @setting.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="px-6 py-5 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Company Information</h2>
      </div>

      <div class="px-6 py-5 space-y-6">
        <!-- Logo Upload -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Company Logo</label>
          <% if @setting.logo.attached? %>
            <div class="mb-4">
              <%= image_tag @setting.logo, class: "h-24 w-auto object-contain" %>
            </div>
          <% end %>
          <%= form.file_field :logo, accept: "image/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200" %>
          <p class="mt-1 text-xs text-gray-500">JPG, PNG, or SVG (max 2MB)</p>
        </div>

        <!-- Company Name -->
        <div>
          <%= form.label :company_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :company_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
        </div>

        <!-- Company Address -->
        <div>
          <%= form.label :company_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_area :company_address, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
        </div>

        <!-- Contact Information -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <%= form.label :company_phone, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :company_phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          </div>
          <div>
            <%= form.label :company_email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.email_field :company_email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          </div>
        </div>

        <!-- Website -->
        <div>
          <%= form.label :company_website, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.url_field :company_website, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
        </div>
      </div>

      <!-- Invoice Defaults Section -->
      <div class="px-6 py-5 border-t border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Invoice Defaults</h2>
      </div>

      <div class="px-6 py-5 space-y-6">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <!-- Tax Rate -->
          <div>
            <%= form.label :tax_rate, "Tax Rate (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :tax_rate, step: 0.01, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          </div>

          <!-- Currency -->
          <div>
            <%= form.label :currency, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.text_field :currency, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          </div>
        </div>

        <!-- Payment Terms -->
        <div>
          <%= form.label :payment_terms, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :payment_terms, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">e.g., "Net 30", "Due on receipt"</p>
        </div>

        <!-- Invoice Prefix -->
        <div>
          <%= form.label :invoice_prefix, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.text_field :invoice_prefix, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-500 focus:ring-gray-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Prefix for invoice numbers (e.g., "INV-")</p>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-3">
        <%= link_to "Cancel", root_path, class: "px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
        <%= form.submit "Save Settings", class: "px-4 py-2 border border-transparent rounded-lg text-sm font-semibold text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

